<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/reg_bg"
    android:orientation="vertical" >




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/main_bg_top" >

    </LinearLayout>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical" >




            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:src="@drawable/ic_default_face" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:orientation="vertical" >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称:"
                    android:textSize="15dp" />



                <TextView
                    android:id="@+id/main_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无极剑圣"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/main_gender"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="心情:"
                    android:textSize="15dp" />



                <TextView
                    android:id="@+id/main_mood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="太阳很猛烈"
                    android:textSize="15dp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp" >

                <TextView
                    android:id="@+id/main_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广东机电职业技术学院 " />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_location" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_share" />

            </LinearLayout>

        </LinearLayout>

    </TableRow>



    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <Button
                android:id="@+id/main_revise_data"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:background="@drawable/main_bg_gray"
                android:paddingBottom="5dp"
                android:text="改资料"
                android:textColor="#bbbbbe"
                android:textSize="15dp" />


            <Button
                android:id="@+id/main_revise_password"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/main_bg_gray"
                android:paddingBottom="5dp"
                android:text="改密码"
                android:textColor="#bbbbbe"
                android:textSize="15dp" />

        </LinearLayout>

    </TableRow>


    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_bg_table" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical" >





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/main_log"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/main_ic_blog11" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的日志" />

                </LinearLayout>






                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="70dp"
                    android:gravity="center"
                    android:orientation="vertical" >


                    <Button
                        android:id="@+id/main_photo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/main_ic_album11" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的相册" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/main_friend"
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:background="@drawable/main_ic_friend11" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好友列表" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="70dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/main_friend_feed"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/main_ic_friend_feed11" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好友动态" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/main_visitor"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/main_ic_visitor11" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最近访客" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="70dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/main_music"
                        android:layout_width="55dp"
                        android:layout_height="57dp"
                        android:background="@drawable/main_ic_music11" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的音乐" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </TableRow>

</TableLayout>