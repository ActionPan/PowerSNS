<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.powersns"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name" 
            android:theme="@style/NoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="LoginActivity" android:launchMode="singleInstance"></activity>
        <activity android:name="RegisterActivity" android:launchMode="singleInstance"></activity>
        <activity android:name="MainActivity" android:launchMode="singleInstance"></activity>
        <activity android:name="DataActivity" android:launchMode="singleInstance"></activity>
        <activity android:name="LogListActivity" android:launchMode="singleInstance"></activity>
        <activity android:name="ChangeFaceActivity" android:launchMode="singleInstance"></activity>
        <activity android:name="LogAddActivity" android:launchMode="singleInstance"></activity>
        <activity android:name="LogManagerActivity"></activity>
        <activity android:name="FriendListActivity"></activity>
        <activity android:name="AddFriendActivity"></activity>
        <activity android:name="PhotoListActivity"></activity>
    </application>

</manifest>
