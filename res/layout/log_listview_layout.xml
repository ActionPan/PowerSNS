<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_bg_list"
    android:orientation="vertical" >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp" >

         <Button
             android:id="@+id/log_listview_back"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:background="@drawable/bt_back" />

         <TextView
             android:id="@+id/log_Listview_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="35dp"
             android:layout_weight="0.50"
             android:text="无极剑圣日志列表"
             android:textColor="#FFFFFF"
             android:textSize="20dp" />

         <Button
             android:id="@+id/log_listview_write"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:background="@drawable/log_bt_write" />

     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/log_listView_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" >

        </ListView>

    </LinearLayout>

</LinearLayout>